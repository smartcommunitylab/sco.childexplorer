	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1 nopadding">
				<div class="panel panel-default">
			  		<div class="panel-body nopadding">
			  			<div class="view_body_wrapper">
							
							<div class="row">
								<div class="col-md-12">
									<div class="user-greetings">
										Ciao {playerName}!
									</div>
								</div>
							</div>
							
							<div class="row">
								<div class="col-md-12">
									<div class="user-km">
										Complimenti! Hai effettuato {passi} pass{@eq key=passi value="1" type="number"}o{:else}i{/eq}
									</div>
								</div>
							</div>
							
							<div class="row">
								<div class="col-md-12">
									<div class="user-badges">
										Hai guadagnato {alberi} alber{@eq key=alberi value="1" type="number"}o{:else}i{/eq}
									</div>
								</div>
							</div>
							
							<hr/>
							
							<div id="badges-images" class="row">
                {#badges}
                <div class="col-md-2">
									<div class="image-badge">
										<p>{.}</p>
									</div>
								</div>
								{/badges}
							</div>
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>	
